{
  "$schema": "https://designtokens.org/schemas/2025.10/format.json",
  "semantic": {
    "typography": {
      "$type": "typography",
      "heading": {
        "display": {
          "$root": {
            "$value": {
              "fontFamily": "{semantic.typography.fontFamily.default}",
              "fontSize": "{primitive.dimension.size.fontSize.950}",
              "fontWeight": "{primitive.typography.weight.extraLight}",
              "lineHeight": "{primitive.number.lineHeight.950}",
              "letterSpacing": "{primitive.dimension.letterSpacing.default}"
            },
            "$extensions": {
              "com.canonical.typography": {
                "$value": {
                  "letterCase": {
                    "$ref": "#/primitive/typography/letterCase/default/$extensions/com.canonical.typography/$value"
                  },
                  "figureStyle": {
                    "$ref": "#/primitive/typography/figureStyle/oldStyleFigure/$extensions/com.canonical.typography/$value"
                  }
                }
              }
            },
            "$description": "Display heading for hero sections and major page titles (84px) (Some properties of this token are not yet supported by the W3C DTCG specification, so they are stored in $extensions and require a token transformer compatible with Canonical design system extensions.)"
          },
          "bold": {
            "$value": {
              "fontFamily": {
                "$ref": "#/semantic/typography/heading/display/$root/$value/fontFamily"
              },
              "fontSize": {
                "$ref": "#/semantic/typography/heading/display/$root/$value/fontSize"
              },
              "fontWeight": "{primitive.typography.weight.regular}",
              "lineHeight": {
                "$ref": "#/semantic/typography/heading/display/$root/$value/lineHeight"
              },
              "letterSpacing": {
                "$ref": "#/semantic/typography/heading/display/$root/$value/letterSpacing"
              }
            },
            "$extensions": {
              "com.canonical.typography": {
                "$value": {
                  "letterCase": {
                    "$ref": "#/semantic/typography/heading/display/$root/$extensions/com.canonical.typography/$value/letterCase"
                  },
                  "figureStyle": {
                    "$ref": "#/semantic/typography/heading/display/$root/$extensions/com.canonical.typography/$value/figureStyle"
                  }
                }
              }
            },
            "$description": "Bold variant of display heading for additional emphasis (84px) (Some properties of this token are not yet supported by the W3C DTCG specification, so they are stored in $extensions and require a token transformer compatible with Canonical design system extensions.)"
          }
        }
      }
    }
  }
}
